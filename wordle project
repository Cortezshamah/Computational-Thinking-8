import random

# Pick a word at random
word_list = ["loopy","heart","audio","laugh","trial","goody","botch","balls","point","black","whale","fried","steak","batch","hatch","watch","match","catch","latch","patch","plaid","xylyl","benag","egypt","chile","china","ghana","haiti","india","italy","japan","kenya","libya","malta","nepal","samoa","spain","syria","yemen","parer","foyer","mummy","coyly","tacit","billy","tilly","footy","cater","gomez","lorax","kanye","music","timer","image","jokes","eaiou","ocean","atcha","smile","frogs","fives","photo","loved","would","bresh","write","wrong","wills","ortez","maddy","macey","avery","jacob","pouch","other","trust","baker","parks","alexi","mondy","tusdy","wesdy","turdy","fridy"]
hidden_word = random.choice(word_list)

print("WORDLE:")
# Repeat for 6 guesses
for i in range(6):
    # Guess a word
    guess_word = input()
    output = ""

    # First letter (in python, counting starts at 0 not 1)
    if guess_word[0] == hidden_word[0]:
        output += "ğŸŸ©"
    elif guess_word[0] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"
    # 2nd letter test
    if guess_word[1] == hidden_word[1]:
        output += "ğŸŸ©"
    elif guess_word[1] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"
    # Result
 
    # 3rd letter test
    if guess_word[2] == hidden_word[2]:
        output += "ğŸŸ©"
    elif guess_word[2] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"
    
    # 4th letter test
    if guess_word[3] == hidden_word[3]:
        output += "ğŸŸ©"
    elif guess_word[3] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    if guess_word[4] == hidden_word[4]:
        output += "ğŸŸ©"
    elif guess_word[4] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"
    print(output)
    if output == "ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©":
        print("You win")
        break

print(f"You used {i+1} guesses")